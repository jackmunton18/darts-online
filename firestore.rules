rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic user profile permissions
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Darts games permissions - simplified for testing
    match /games/{gameId} {
      // Anyone authenticated can read games
      allow read: if request.auth != null;
      
      // Anyone authenticated can create a game
      allow create: if request.auth != null;
      
      // Anyone authenticated can update games (simplified for testing)
      allow update: if request.auth != null;
      
      // Only authenticated users can delete games
      allow delete: if request.auth != null;
      
      // Game turns subcollection
      match /turns/{turnId} {
        allow read, create, update, delete: if request.auth != null;
      }
    }
    
    // Tournament permissions
    match /tournaments/{tournamentId} {
      // Anyone authenticated can read tournaments
      allow read: if request.auth != null;
      
      // Anyone authenticated can create a tournament
      allow create: if request.auth != null;
      
      // Tournament host can always update, or any authenticated user can update for now (simplified)
      allow update: if request.auth != null;
      
      // Only the host can delete tournaments
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }
    
    // Player statistics
    match /playerStats/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Tournament results collection
    match /tournament_results/{resultId} {
      // Anyone authenticated can read tournament results
      allow read: if request.auth != null;
      
      // Anyone authenticated can create tournament results
      allow create: if request.auth != null;
      
      // Anyone authenticated can update tournament results (simplified for testing)
      allow update: if request.auth != null;
      
      // Anyone authenticated can delete tournament results (simplified for testing)
      allow delete: if request.auth != null;
    }
  }
}
